source 'http://rubygems.org'

gem 'rails', '3.1.1'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.4'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'coffee-script'
gem 'eco'
gem 'spine-rails'
gem 'haml'
gem 'oauth'

# To use debugger
gem 'ruby-debug19', :require => 'ruby-debug'
